{
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "toggle",

  "window.autoDetectColorScheme": true,
  "workbench.preferredLightColorTheme": "Ros√© Pine Dawn",
  "workbench.preferredDarkColorTheme": "Everforest Dark",
  "workbench.editor.showTabs": "single",

  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.fontFamily": "'JetBrainsMonoNL Nerd Font', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": true,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 5,
  "editor.semanticHighlighting.enabled": true,

  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,

  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.linux": {
    "sh-flatpak": {
      "icon": "terminal-bash",
      "path": "/usr/bin/sh"
    },
    "bash": {
      "path": "/usr/bin/flatpak-spawn",
      "icon": "terminal-bash",
      "args": ["--host", "--env=TERM=xterm-256color", "bash"]
    }
  },

  "dev.containers.dockerPath": "podman",

  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.smartRelativeLine": true,
  "vim.leader": "<space>",
  "vim.surround": true,
  "vim.insertModeKeyBindings": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "after": [],
      "commands": [
        {
          "command": "undo",
          "args": []
        }
      ]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [
        {
          "command": "redo",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "+", "p"]
    },
    {
      "before": ["<leader>", "a"],
      "after": ["g", "g", "V", "G"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["<C-o>"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["<C-i>"],
      "commands": ["workbench.action.navigateForward"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"],
      "silent": true
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"],
      "silent": true
    },
    {
      "before": ["g", "o"],
      "commands": ["editor.action.goToTypeDefinition"],
      "silent": true
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"],
      "silent": true
    },
    {
      "before": ["<leader>", "s", "f"],
      "commands": ["workbench.action.quickOpen"],
      "silent": true
    },
    {
      "before": ["<leader>", "s", "r"],
      "commands": ["workbench.action.openRecent"],
      "silent": true
    },
    {
      "before": ["<leader>", "s", "g"],
      "commands": ["workbench.action.findInFiles"],
      "silent": true
    },
    {
      "before": ["<leader>", "s", "o"],
      "commands": ["workbench.action.gotoSymbol"],
      "silent": true
    },
    {
      "before": ["<leader>", "s", "l"],
      "commands": ["workbench.explorer.fileView.focus"],
      "silent": true
    },
    {
      "before": ["<leader>", "v", "a"],
      "commands": ["editor.action.quickFix"],
      "silent": true
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"],
      "silent": true
    },
    {
      "before": ["<leader>", "r", "m"],
      "commands": [
        {
          "command": "editor.action.codeAction",
          "args": {
            "kind": "refactor.extract.function"
          }
        }
      ],
      "silent": true
    },
    {
      "before": ["<leader>", "g", "b"],
      "commands": ["gitlens.toggleFileBlame"],
      "silent": true
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showDefinitionPreviewHover"],
      "silent": true
    },
    {
      "before": ["<leader>", "v", "d"],
      "commands": ["editor.action.marker.nextInFiles"],
      "silent": false
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"],
      "silent": true
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "+", "p"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"],
      "silent": true
    },
    {
      "before": ["<leader>", "v", "a"],
      "commands": ["editor.action.quickFix"],
      "silent": true
    },
    {
      "before": ["<leader>", "r", "m"],
      "commands": [
        {
          "command": "editor.action.codeAction",
          "args": {
            "kind": "refactor.extract.function"
          }
        }
      ],
      "silent": true
    },
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"],
      "silent": true
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "commands": ["editor.action.commentLine"],
      "before": ["<leader>", "c"],
      "when": "editorTextFocus && !editorReadonly"
    }
  ],
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "redhat.telemetry.enabled": true
}
