{
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "toggle",

  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Gruvbox Dark Medium",
  "workbench.preferredLightColorTheme": "Ros√© Pine Dawn",
  "workbench.editor.showTabs": "single",

  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.fontFamily": "'JetBrainsMonoNL Nerd Font', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": true,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 5,
  "editor.semanticHighlighting.enabled": true,
  "editor.lineNumbers": "relative",

  "explorer.confirmDelete": false,

  "chat.commandCenter.enabled": false,

  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,

  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.defaultProfile.linux": "bash (host)",
  "terminal.integrated.profiles.linux": {
    "sh (flatpak)": {
      "path": "/usr/bin/sh"
    },
    "bash (host)": {
      "path": "host-spawn",
      "args": ["bash"]
    }
  },
  "terminal.integrated.commandsToSkipShell": ["-workbench.action.quickOpen"],
  "dev.containers.dockerPath": "podman",

  "gitlens.currentLine.enabled": false,
  "oil-code.hasNerdFont": true,
  "magit.display-buffer-function": "same-column",

  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.smartRelativeLine": true,
  "vim.leader": "<space>",
  "vim.surround": true,
  "vim.insertModeKeyBindings": [],
  "vim.insertModeKeyBindingsNonRecursive": [],
  "vim.normalModeKeyBindings": [
    {
      "before": ["-"],
      "commands": [
        {
          "command": "oil-code.open"
        }
      ]
    },
    {
      "before": ["<CR>"],
      "commands": [
        {
          "command": "oil-code.select"
        }
      ]
    },
    {
      "before": ["<leader>", "e"],
      "commands": [
        "workbench.files.action.focusFilesExplorer",
      ]
    },
    {
      "before": ["<leader>", "<leader>"],
      "commands": [
        "workbench.action.closeSidebar",
        "workbench.action.closePanel"
      ]
    },
    {
      "before": ["leader", "g", "g"],
      "commands": ["magit.status"]
    },
    {
      "before": ["u"],
      "after": [],
      "commands": [
        {
          "command": "undo",
          "args": []
        }
      ]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [
        {
          "command": "redo",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "+", "p"]
    },
    {
      "before": ["<leader>", "a"],
      "after": ["g", "g", "V", "G"]
    },
    {
      "before": ["<C-o>"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["<C-i>"],
      "commands": ["workbench.action.navigateForward"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"],
      "silent": true
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"],
      "silent": true
    },
    {
      "before": ["g", "o"],
      "commands": ["editor.action.goToTypeDefinition"],
      "silent": true
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"],
      "silent": true
    },
    {
      "before": ["<leader>", "s", "f"],
      "commands": ["workbench.action.quickOpen"],
      "silent": true
    },
    {
      "before": ["<leader>", "s", "r"],
      "commands": ["workbench.action.quickOpenPreviousEditor"],
      "silent": true
    },
    {
      "before": ["<leader>", "s", "w"],
      "commands": [
        "editor.action.addSelectionToNextFindMatch",
        "workbench.action.findInFiles"
      ],
      "silent": true
    },
    {
      "before": ["<leader>", "s", "g"],
      "commands": ["workbench.action.findInFiles"],
      "silent": true
    },
    {
      "before": ["<leader>", "s", "o"],
      "commands": ["workbench.action.gotoSymbol"],
      "silent": true
    },
    {
      "before": ["<leader>", "s", "b"],
      "commands": ["workbench.action.showAllEditorsByMostRecentlyUsed"],
      "silent": true
    },
    {
      "before": ["<leader>", "v", "a"],
      "commands": ["editor.action.quickFix"],
      "silent": true
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"],
      "silent": true
    },
    {
      "before": ["<leader>", "r", "m"],
      "commands": [
        {
          "command": "editor.action.codeAction",
          "args": {
            "kind": "refactor.extract.function"
          }
        }
      ],
      "silent": true
    },
    {
      "before": ["<leader>", "g", "b"],
      "commands": ["gitlens.toggleFileBlame"],
      "silent": true
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"],
      "silent": true
    },
    {
      "before": ["<leader>", "d", "k"],
      "commands": ["editor.action.marker.prevInFiles"],
      "silent": true
    },
    {
      "before": ["<leader>", "d", "j"],
      "commands": ["editor.action.marker.nextInFiles"],
      "silent": true
    },
    {
      "before": ["<leader>", "<leader>"],
      "commands": [
        "workbench.action.closeSidebar",
        "workbench.action.closePanel",
        "workbench.action.closeAuxiliaryBar"
      ],
      "silent": true
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["editor.action.formatDocument"],
      "silent": false
    },
    {
      "before": ["<c-l>"],
      "commands": [
        {
          "command": "oil-code.refresh"
        }
      ]
    },
    {
      "before": ["`"],
      "commands": [
        {
          "command": "oil-code.cd"
        }
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "+", "p"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"],
      "silent": true
    },
    {
      "before": ["<leader>", "v", "a"],
      "commands": ["editor.action.quickFix"],
      "silent": true
    },
    {
      "before": ["<leader>", "r", "m"],
      "commands": [
        {
          "command": "editor.action.codeAction",
          "args": {
            "kind": "refactor.extract.function"
          }
        }
      ],
      "silent": true
    },
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"],
      "silent": true
    },
    {
      "before": ["<leader>", "s", "w"],
      "commands": [
        "editor.action.addSelectionToNextFindMatch",
        "workbench.action.findInFiles"
      ],
      "silent": true
    },
    {
      "commands": ["editor.action.commentLine"],
      "before": ["<leader>", "c"],
      "when": "editorTextFocus && !editorReadonly"
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [],
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "redhat.telemetry.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "window.commandCenter": true,
  "python.analysis.typeCheckingMode": "standard"
}
